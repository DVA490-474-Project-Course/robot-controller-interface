/* Related .h files */
#include "rasp_communicator.h"

/* C++ standard library headers */
#include <string.h>
#include <stdio.h>

/* Project .h files */
#include "../stm32h7xx_hal.h"

namespace stm32_code
{
namespace raspberrypi_communicator
{
void TransmitToRaspberryPi(UART_HandleTypeDef &huart)
{
    const char* message = "Hello from STM32!\r\n";
    HAL_UART_Transmit(&huart, (uint8_t*)message, strlen(message), HAL_MAX_DELAY);
}


} /* namespace raspberrypi_communicator */
} /* namespace stm32_code */
